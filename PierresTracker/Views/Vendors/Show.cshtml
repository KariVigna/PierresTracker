<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Pierre's Bakery Tracker!</title>
        <link 
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
        rel="stylesheet" 
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" 
        crossorigin="anonymous">
    </head>
    <body>
        @using PierresTracker.Models;

        <h3>Here are all of @Model["vendor"].Name's orders:</h3>

        <ol>
        @foreach (Order order in @Model["orders"])
        {
        <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Description</a>, @order.Qty</li>
        }
        </ol>

        <a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a><br>
        <a href='/vendors'>Return to vendor list</a><br>
        <a href='/'>Return to Main Page</a>
    </body>
</html>